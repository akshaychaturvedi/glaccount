<mvc:View
		controllerName="deminimis.controller.Main"
		height="100%"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
        xmlns:grid="sap.ui.table"
        xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
		xmlns:f="sap.f"
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:svm="sap.ui.comp.smartvariants">    
    
    <f:DynamicPage headerExpanded="{/headerExpanded}">

			<f:title>
				<f:DynamicPageTitle>	
                    <f:heading>
						<svm:SmartVariantManagement id="svm" persistencyKey="SmartFilter_Explored"/>
					</f:heading>	
				</f:DynamicPageTitle>
			</f:title>
	
    		<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<smartfilterbar:SmartFilterBar 
                                        id="smartFilter"
                                        entitySet="DeminimisData"
                                        search="onSearch"
                                        smartVariant="svm"
                                        persistencyKey="SmartFilter_Explored"
                                        width="100%">               
                        <smartfilterbar:controlConfiguration>
                        <smartfilterbar:ControlConfiguration 
                                        key="GJAHR"
                                        visibleInAdvancedArea="true"
                                        label="Fiscal Year">                                        
                        </smartfilterbar:ControlConfiguration>
                        <smartfilterbar:ControlConfiguration 
                                        key="LAND1"
                                        visibleInAdvancedArea="true"
                                        label="Country">
                        </smartfilterbar:ControlConfiguration>                    
                        </smartfilterbar:controlConfiguration>
               </smartfilterbar:SmartFilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>

			<f:content>
                
				<grid:Table
                    id="gridTable"
                    enableCellFilter="true"
                    rows="{
                        path: '/DeminimisData',
                        sorter: {
                            path : 'LAND1'
                        }                        
                    }"                                        
                    fixedColumnCount="3"
                    enableColumnReordering="true"
                    selectionMode="Single" 
                    alternateRowColors="true" 
                    visibleRowCount="12"
                    selectionBehavior="RowOnly"
                    enableSelectAll="false"
                    rowSelectionChange="onRowSelected"  
                    rowsUpdated=".onRowsUpdated"                  
                >
                
                <grid:rowSettingsTemplate>
                    <grid:RowSettings highlight="{= ${EXCLUSION} === true ? 'Success' : 'Error' }" ></grid:RowSettings>
                </grid:rowSettingsTemplate>
                
                <!-- <grid:rowActionTemplate>
                    <grid:RowAction >
                        <grid:RowActionItem text="Download"></grid:RowActionItem>
                    </grid:RowAction>
                </grid:rowActionTemplate> -->

                <!-- <grid:rows class="{ parts: ['EXCLUSION'], formatter: '.determineRowClass' }"> -->
                <!-- <grid:rows addStyleClass="rowExclusionFalse">
                </grid:rows> -->

                <grid:extension>
                    <OverflowToolbar style="Clear">
                        <Title text="Deminimis Data"></Title>
                        <ToolbarSpacer />
                        <Button icon="sap-icon://download" press="onExport"/>
                    </OverflowToolbar>
                    	
                </grid:extension>
                
                <grid:columns>    
                    <grid:Column autoResizable="true" width="4rem" sortProperty="GJAHR">
                        <Text text="Fiscal Year"/>
                        <grid:template>
                            <ObjectIdentifier text="{GJAHR}"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>                                    

                    <grid:Column autoResizable="true" width="4.5rem" sortProperty="LAND1">
                        <Text text="Country"/>
                        <grid:template>
                            <ObjectIdentifier text="{LAND1}"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>  

                    <grid:Column autoResizable="true" width="5rem" sortProperty="KTOPL">
                        <Text text="Chart of Accounts"/>
                        <grid:template>
                            <ObjectIdentifier text="{KTOPL}"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>                  

                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="REV_YEAR">
                        <Text text="GLoBE Revenue Year"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'REV_YEAR', formatter: '.formatValue' }"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>

                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="REV_YEAR1">
                        <Text text="GLoBE Revenue Year 1"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'REV_YEAR1', formatter: '.formatValue' }"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>

                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="REV_YEAR2">
                        <Text text="GLoBE Revenue Year 2"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'REV_YEAR2', formatter: '.formatValue' }"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>    

                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="REV_AVG">
                        <Text text="GLoBE Revenue Average"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'REV_AVG', formatter: '.formatValue' }"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>    

                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="INC_YEAR">
                        <Text text="GLoBE Income/Loss Year"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'INC_YEAR', formatter: '.formatValue' }"></ObjectIdentifier>                            
                        </grid:template>
                    </grid:Column>            

                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="INC_YEAR1">
                        <Text text="GLoBE Income/Loss Year 1"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'INC_YEAR1', formatter: '.formatValue' }"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column> 

                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="INC_YEAR2">
                        <Text text="GLoBE Income/Loss Year 2"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'INC_YEAR2', formatter: '.formatValue' }"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>                       
                    
                    <grid:Column autoResizable="true" width="8.5rem" sortProperty="INC_AVG">
                        <Text text="GLoBE Income/Loss Average"/>
                        <grid:template>
                            <ObjectIdentifier text="{ path: 'INC_AVG', formatter: '.formatValue' }"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>                                       

                    <grid:Column autoResizable="true" width="6rem" sortProperty="EXCLUSION" >
                        <Text text="DeMinimis Exclusion"/>
                        <grid:template>
                            <ObjectIdentifier text="{= ${EXCLUSION} === true ? 'Yes' : 'No'}" class="bold"></ObjectIdentifier>
                        </grid:template>
                    </grid:Column>

                </grid:columns>
                    
                <!-- <grid:rows>
                    <grid:Row>
