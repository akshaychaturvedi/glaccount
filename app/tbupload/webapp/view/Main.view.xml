                        </cells>
                        <cells>
                            <Text text="abcd" />
                        </cells>
                        <cells>
                            <Text text="abcd" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Default" text="Save"/>
            </OverflowToolbar>
        </f:footer>

    </f:DynamicPage>

</mvc:View>
